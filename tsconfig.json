{
  "compilerOptions": {
    "target": "es2022",  
    "module": "es2022",  
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "outDir": "./dist",  
    "rootDir": "./",  
    "moduleResolution": "node",  
    "types": [
      "node"
    ],
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,  
    "strict": true, 
    "skipLibCheck": true,  
    "resolveJsonModule": true,  
    "baseUrl": ".",  
    "paths": {
      "*": ["node_modules/*", "src/*"]  
    }
  },
  "include": [
    "src/**/*"  // Garantir que todos os arquivos dentro da pasta src sejam incluídos na transpilação
  ]
}