{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}